{
    "name": "accelade/schemas",
    "description": "Schema layout components for Accelade - organize forms with sections, tabs, grids, wizards and more",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Fady Mondy",
            "email": "info@3x1.io",
            "homepage": "https://3x1.io",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/accelade/schemas",
    "keywords": [
        "laravel",
        "blade",
        "accelade",
        "schemas",
        "layout",
        "forms",
        "section",
        "tabs",
        "grid",
        "wizard"
    ],
    "repositories": [
        {
            "type": "path",
            "url": "../accelade",
            "options": {
                "symlink": true
            }
        }
    ],
    "require": {
        "php": "^8.2",
        "accelade/accelade": "@dev",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/view": "^11.0|^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.18",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Accelade\\Schemas\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Accelade\\Schemas\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Accelade\\Schemas\\SchemasServiceProvider"
            ],
            "aliases": {
                "Schema": "Accelade\\Schemas\\Facades\\Schema"
            }
        }
    },
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --coverage",
        "format": "pint",
        "format:test": "pint --test",
        "mago": "./mago lint src/ || mago lint src/",
        "mago:fix": "./mago lint src/ --fix || mago lint src/ --fix",
        "analyse": [
            "@format:test",
            "@mago"
        ],
        "ci": [
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
